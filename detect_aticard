	echo "Your Card isn't supported by the linux fglrx driver."
	echo ""
	DRIVER="ati"
fi

case $AIGLX in
	0) AIGLX="No"
	;;
	1) AIGLX="Yes"
	;;
esac

echo "Detected Card: $NAME"
echo "Driver: $DRIVER"
echo "PCI ID: $ID3"
echo "AIGLX Support: $AIGLX"

